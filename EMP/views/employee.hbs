<!doctype html>
<html lang="en">

<head>
    <title>Employee Payroll Manegement System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <style>
        .navbar .container {
            justify-content: center;
            height: 60px;

        }

        .navbar {
            border: solid;
            border-color: black;
        }

        .navbar-brand {
            font-size: 40px;
            font-weight: 700;
            margin-top: 0;
        }

        .ai {
            font-size: 40px;
            color: rgb(0, 0, 0);
            margin-left: 15px;
        }

        .btn {
            margin-top: 10px;
        }

        .btn1 {
            font-size: 22px;
            margin-top: 15px;
            margin-left: 15px;
            width: 180px;
            height: 50px;
        }

        .textarea1 {
            white-space: pre-line;
            font-family: monospace;
            border: 2px solid #ccc;
            padding: 10px;
            width: 36%;
            height: 55vh;
            font-size: 1.2vw;
            font-weight: bold;
            margin-left: 33%;
        }

        .combox {
            margin-top: 2.8%;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="sidebar.css">
</head>

<body>
    <!--Navbar-->
    <nav class="navbar bg-warning fixed-top">
        <i class='bx bx-menu ai'></i>
        <div class="container">

            <a class="navbar-brand" href="#">Employee Payroll Management System</a>
        </div>
    </nav>
    <!--SideBar-->

    <div class="sidebar">
        <div class="logo-details">
            <i class='bx bxs-home-alt-2'></i>
            <span class="logo_name">Developed By Nikhil</span>
        </div>

        <ul class="nav-links">
            <li>
                <a href="employee">
                    <i class='bx bx-grid-alt'></i>
                    <span class="link_name">My Profile</span>
                </a>
            </li>

            <li>
                <a href="changepassword">
                    <i class='bx bx-pie-chart-alt-2'></i>
                    <span class="link_name">Change Password</span>
                </a>
            </li>

            <li>
                <a href="updateprofile">
                    <i class='bx bx-line-chart'></i>
                    <span class="link_name">Update Profile</span>
                </a>
            </li>
            <li>
                <a href="#" onclick="logoutSubmit()">
                    <i class='bx bx-line-chart'></i>
                    <span class="link_name">Logout</span>
                </a>
                <form id="logoutForm" action="/logout" method="post">
                    <!-- You can include any additional data or inputs in the form if needed -->
                </form>
            </li>
        </ul>
    </div>
    <script>
        function logoutSubmit() {
            if (confirm('Do you really want to logout?')) {
                // If the user confirms, trigger the form submission
                document.getElementById("logoutForm").submit();
            }
        }
    </script>

    <script>
        let arrow = document.querySelectorAll(".arrow");

        for (var i = 0; i < arrow.length; i++) {
            arrow[i].addEventListener("click", (e) => {
                let arrowParent = e.target.parentElement.parentElement;

                arrowParent.classList.toggle("showMenu");
            });

        }
        let sidebar = document.querySelector(".sidebar");
        let sidebarBtn = document.querySelector(".bx-menu");
        console.log(sidebarBtn);
        sidebarBtn.addEventListener("click", (e) => {
            sidebar.classList.toggle("close");
        });
    </script>

    <section class="home-section">
        <div class="home-content">
            <div class="page-wrapper">
                <div class="content container-fluid">
                    <div class="page-header">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card" style="float:left;margin-left: 20px;width:97%">
                                    <div class="card-body">
                                        <h2>My Profile</h2>
                                        <hr class="hr">
                                        <h2 style="text-align: center;color:rgb(255, 0, 0)">My Details</h2>
                                        <div class="row" style="display: flex;">
                                            <div class="card" style="margin-top:20px;margin-left: 20px;width:45%">
                                                <div class="card-body">
                                                    <p class="ad text-uppercase">Employee Code</p>
                                                    <p class="text-uppercase nm">{{user1.empcode}}</p>
                                                    <hr>
                                                    <p class="ad">Designation</p>
                                                    <p class="text-uppercase nm">{{user1.designation}}</p>
                                                    <hr>

                                                    <p class="ad">D.O.J</p>
                                                    <p class="text-uppercase nm">{{user1.doj}}</p>
                                                    <hr>

                                                    <p class="ad">Name </p>
                                                    <p class="text-uppercase nm">{{user1.name}}</p>
                                                    <hr>

                                                    <p class="ad">D.O.B </p>
                                                    <p class="text-uppercase nm">{{user1.dob}}</p>
                                                    <hr>

                                                    <p class="ad">Age </p>
                                                    <p class="text-uppercase nm">{{user1.age}}</p>


                                                </div>
                                            </div>
                                            <div class="card" style="margin-top:20px;margin-left: 20px;width:45%">
                                                <div class="card-body">
                                                    <p class="ad">Experience </p>
                                                    <p class="text-uppercase nm">{{user1.experience}}</p>
                                                    <hr>

                                                    <p class="ad">Gender </p>
                                                    <p class="text-uppercase nm">{{user1.gender}}</p>
                                                    <hr>

                                                    <p class="ad text-uppercase">Proof ID</p>
                                                    <p class="nm">{{user1.proffid}}</p>
                                                    <hr>

                                                    <p class="ad">Email </p>
                                                    <p class="text nm">{{user1.email}}</p>
                                                    <hr>

                                                    <p class="ad">Contact No</p>
                                                    <p class="text-uppercase nm">{{user1.contact}}</p>
                                                    <hr>

                                                    <p class="ad">Address </p>
                                                    <p class="text-uppercase nm">{{user1.address}}</p>
                                                </div>
                                            </div>
                                        </div>

                                        <hr class="hr">
                                        <h2 style="text-align: center;color:rgb(255, 0, 0)">My Salary Details</h2>
                                        <div class="row" style="display: flex;">
                                            <div class="card" style="margin-top:20px;margin-left: 20px;width:45%">
                                                <div class="card-body">
                                                    <p class="ad text-uppercase">Month</p>
                                                    <p class="text-uppercase nm">{{user1.month}}</p>
                                                    <hr>
                                                    <p class="ad">Year</p>
                                                    <p class="text-uppercase nm">{{user1.year}}</p>
                                                    <hr>

                                                    <p class="ad">Basic Salary</p>
                                                    <p class="text-uppercase nm">{{user1.bsal}}</p>
                                                    <hr>

                                                    <p class="ad">Total Days </p>
                                                    <p class="text-uppercase nm">{{user1.tdays}}</p>
                                                    <hr>

                                                    <p class="ad">Absents</p>
                                                    <p class="text-uppercase nm">{{user1.absents}}</p>
                                                    <hr>
                                                </div>
                                            </div>
                                            <div class="card" style="margin-top:20px;margin-left: 20px;width:45%">
                                                <div class="card-body">
                                                    <p class="ad">Medical </p>
                                                    <p class="text-uppercase nm">{{user1.medical}}</p>
                                                    <hr>

                                                    <p class="ad">Provident Fund </p>
                                                    <p class="text-uppercase nm">{{user1.pfund}}</p>
                                                    <hr>

                                                    <p class="ad text-uppercase">Convence</p>
                                                    <p class="nm">{{user1.convence}}</p>
                                                    <hr>

                                                    <p class="ad">Net Salary </p>
                                                    <p class="text-uppercase nm">{{user1.netsalary}}</p>
                                                    <hr>
                                                </div>
                                            </div>
                                        </div>

                                        <hr class="hr">
                                        <h2 style="text-align: center;color:rgb(255, 0, 0)">This Month Salary Receipt
                                        </h2>
                                        <div class="row" style="display: flex;">
                                            <div class="combox">
                                                <textarea class="textarea1" id="template">
                                                    {{template}}
                                            </textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <style>
                        .ad {
                            font-size: 16px;
                            color: blue;
                            font-family: sans-serif;
                            font-weight: bold;
                        }

                        .nm {
                            font-size: 20px;
                        }

                        .fn {
                            float: left;
                        }

                        .ph {
                            display: flex;
                            justify-content: center;
                        }

                        .ht {
                            margin-top: 20px;
                            height: 180px;
                        }

                        .hr {
                            height: 2px;
                            background-color: rgb(9, 7, 7);
                            border: none;
                        }

                        hr {
                            height: 1px;
                            background-color: rgb(9, 7, 7);
                            border: none;
                        }
                    </style>
                </div>
            </div>
        </div>
    </section>


    <!--Javascript Links-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>