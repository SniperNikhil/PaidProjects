    <script>
        function logoutSubmit() {
            if (confirm('Do you really want to logout?')) {
                // If the user confirms, trigger the form submission
                document.getElementById("logoutForm").submit();
            }
        }
    </script>

    <script>
        let arrow = document.querySelectorAll(".arrow");

        for (var i = 0; i < arrow.length; i++) {
            arrow[i].addEventListener("click", (e) => {
                let arrowParent = e.target.parentElement.parentElement;

                arrowParent.classList.toggle("showMenu");
            });

        }
        let sidebar = document.querySelector(".sidebar");
        let sidebarBtn = document.querySelector(".bx-menu");
        console.log(sidebarBtn);
        sidebarBtn.addEventListener("click", (e) => {
            sidebar.classList.toggle("close");
        });
    </script>

    <section class="home-section">
        <div class="home-content">
            <div class="page-wrapper">
                <div class="content container-fluid">
                    <div class="page-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="page-title" style="margin-top: 15px;">Change Password</h3>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="alert alert-info" role="alert">
                        {{success}}
                    </div>
                    <div class="card" style="margin-top:20px;margin-left: 20px;width:97%;">
                        <div class="card-body">
                            <form action="/changepassword" method="post">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label" style="font-weight: bold; color: #333;">Enter New
                                        Password</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" id="passwordInput" name="password">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text eye-icon"
                                                onclick="togglePasswordVisibility()">
                                                <i class="bi bi-eye"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <small class="form-text text-muted">Choose a strong password for better
                                        security.</small>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label" style="font-weight: bold; color: #333;">Confirm
                                        Password</label>
                                    <input type="password" class="form-control" name="confirm_password">
                                    <small class="form-text text-muted">Please re-enter your new password.</small>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary">Change Password</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        /* Style for the eye icon */
        .eye-icon {
            cursor: pointer;
            /* Add hand cursor to the eye icon */
        }
    </style>

    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.getElementById('passwordInput');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
            } else {
                passwordInput.type = 'password';
            }
        }
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const passwordInput = document.querySelector('input[name="password"]');
            const confirmInput = document.querySelector('input[name="confirm_password"]');
            const errorContainer = document.createElement('div');
            errorContainer.classList.add('error-message');
            errorContainer.innerText = 'Passwords do not match.';

            // Function to check if passwords match and show the error message
            function checkPasswordMatch() {
                const password = passwordInput.value;
                const confirm = confirmInput.value;

                if (password === confirm) {
                    errorContainer.style.display = 'none';
                } else {
                    errorContainer.style.display = 'block';
                }
            }

            // Add event listeners to both input fields to check for password match
            passwordInput.addEventListener('input', checkPasswordMatch);
            confirmInput.addEventListener('input', checkPasswordMatch);

            // Add the error container after the "Confirm Password" input field
            const confirmInputContainer = confirmInput.parentNode;
            confirmInputContainer.appendChild(errorContainer);
        });
    </script>
    <style>
        /* Style for the error message */
        .error-message {
            color: red;
            font-size: 12px;
            margin-top: 5px;
            display: none;
        }
    </style>
    <!--Javascript Links-->
