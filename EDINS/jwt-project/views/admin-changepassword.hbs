            /* Add hand cursor to the eye icon */
        }
    </style>

    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.getElementById('passwordInput');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
            } else {
                passwordInput.type = 'password';
            }
        }
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const passwordInput = document.querySelector('input[name="password"]');
            const confirmInput = document.querySelector('input[name="confirm_password"]');
            const errorContainer = document.createElement('div');
            errorContainer.classList.add('error-message');
            errorContainer.innerText = 'Passwords do not match.';

            // Function to check if passwords match and show the error message
            function checkPasswordMatch() {
                const password = passwordInput.value;
                const confirm = confirmInput.value;

                if (password === confirm) {
                    errorContainer.style.display = 'none';
                } else {
                    errorContainer.style.display = 'block';
                }
            }

            // Add event listeners to both input fields to check for password match
            passwordInput.addEventListener('input', checkPasswordMatch);
            confirmInput.addEventListener('input', checkPasswordMatch);

            // Add the error container after the "Confirm Password" input field
            const confirmInputContainer = confirmInput.parentNode;
            confirmInputContainer.appendChild(errorContainer);
        });
    </script>

    <style>
        /* Style for the error message */
        .error-message {
            color: red;
            font-size: 12px;
            margin-top: 5px;
            display: none;
        }
    </style>

