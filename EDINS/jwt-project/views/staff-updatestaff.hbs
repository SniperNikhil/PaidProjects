<div class="page-wrapper">
        <div class="content container-fluid">

            <div class="page-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="page-title">Update Profile</h3>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="alert alert-info" role="alert">
                                {{success}}
                            </div>
                            <form class="row g-3" action="/tupdate1" method="POST" enctype="multipart/form-data">
                                <input type="hidden" name="_id" value="{{list._id}}">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">First Name</label>
                                    <input type="text" class="form-control" name="first_name"
                                        value="{{list.first_name}}" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Last Name</label>
                                    <input type="text" class="form-control" name="last_name" value="{{list.last_name}}">
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="inputEmail4" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="inputEmail4" name="email"
                                        value="{{list.email}}" required>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="inputPassword4" class="form-label">Date of Birth</label>
                                    <input type="date" class="form-control" id="inputPassword4" name="dob"
                                        value="{{list.dob}}">
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Phone Number</label>
                                    <input type="text" class="form-control" maxlength="10" name="phone"
                                        value="{{list.phone}}">
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Teacher Image</label>
                                    <input type="file" class="form-control" maxlength="10" name="page_Photo">
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Gender</label>
                                    <select class="form-control form-control-lg" name="gender" value="{{list.gender}}">
                                        <option>Male</option>
                                        <option>Female</option>
                                    </select>
                                </div>



                                <div class="col-12 mb-3">
                                    <label for="inputAddress" class="form-label">Address</label>
                                    <input type="text" class="form-control" id="inputAddress" name="address"
                                        value="{{list.address}}">
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="inputCity" class="form-label">City</label>
                                    <input type="text" class="form-control" id="inputCity" name="city"
                                        value="{{list.city}}">
                                </div>

                                <div class="col-md-2 mb-3">
                                    <label for="inputZip" class="form-label">Zip</label>
                                    <input type="text" class="form-control" id="inputZip" name="zipcode"
                                        value="{{list.zipcode}}">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">College Name</label>
                                    <input type="text" class="form-control" name="collegename"
                                        value="{{list.collegename}}" required>
                                </div>
                                <div class="col-12 mb-3">
                                    <button type="submit" class="btn btn-primary">Update Teacher</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


