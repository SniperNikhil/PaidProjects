        <script>
            function setupRadioGroup(groupName) {
                // Get all radio buttons with the specified name attribute
                const radioButtons = document.querySelectorAll(`input[type="radio"][name^="${groupName}"]`);

                // Add an event listener to each radio button in the group
                radioButtons.forEach(function (radioButton) {
                    radioButton.addEventListener('change', function () {
                        // Unselect all other radio buttons in the same group
                        radioButtons.forEach(function (rb) {
                            if (rb !== radioButton) {
                                rb.checked = false;
                            }
                        });
                    });
                });
            }

            // Call the function for each question group
            setupRadioGroup("Q1");
            setupRadioGroup("Q2");
            setupRadioGroup("Q3");
            setupRadioGroup("Q4");
            setupRadioGroup("Q5");
        </script>


