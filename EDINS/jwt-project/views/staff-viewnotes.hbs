<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Teacher- Dashboard</title>

    <link rel="shortcut icon" href="images/officiallogo.jpg">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,700;1,400&amp;display=swap">

    <link rel="stylesheet" href="assets/plugins/bootstrap/css/bootstrap.min.css">

    <link rel="stylesheet" href="assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="assets/plugins/fontawesome/css/all.min.css">

    <link rel="stylesheet" href="assets/plugins/simple-calendar/simple-calendar.css">

    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <style>
        .logo1 {
            float: left;
            justify-items: left;
            margin-top: 14px;

        }

        .logo2 {
            margin-left: 15px;
        }

        .btn {
            margin-top: 10px;
        }

        .flex {
            display: flex;
            justify-content: center;
        }

        .hr {
            height: 2px;
            background-color: rgb(9, 7, 7);
            border: none;
        }

        hr {
            height: 1px;
            background-color: rgb(9, 7, 7);
            border: none;
        }

        .btn1 {
            font-size: 20px;
            margin-top: 2px;
            margin-left: 15px;
            width: 160px;
            height: 42px;
        }
    </style>
</head>

<body>

    <!--Common Header File -->
    <div id="headnavbar">
    </div>
    <script>
        $(document).ready(function () {
            $('#headnavbar').load("/common/staffheader.hbs");
        });
    </script>

    <div class="main-wrapper">
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li>
                            <div class="flex">
                                {{#if imge}}
                                <img src="backend/images/{{imge}}" class="img-fluid" alt="">
                                {{else}}
                                <img src="backend/images/7.jpg" class="img-fluid" alt="">
                                {{/if}}
                            </div>
                        </li>
                        <li class="menu-title">
                            <span>Main Menu</span>
                        </li>
                        <li class="submenu">
                            <a href="staff"><i class="bi bi-person-circle"></i> <span> Teacher Dashboard</span><span
                                    class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="staff">Back To Staff Page</a></li>
                            </ul>
                        </li>
                        <li class="">
                            <a href="staff-profile"><i class="fas fa-user-graduate"></i> <span> My Profile </span> <span
                                    class="menu-arrow"></span></a>
                        </li>

                        <li class="menu-title">
                            <span>Chat Application</span>
                        </li>
                        <li>
                            <a href="staff-chatapp"><i class="fas fa-holly-berry"></i> <span>Chat App</span></a>
                        </li>
                        <li class="menu-title">
                            <span>Notes</span>
                        </li>

                        <li class="submenu">
                            <a href="staff"><i class="fas fa-file"></i> <span> Notes</span><span
                                    class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="staff-addnotes">Add Notes</a></li>
                                <li><a href="staff-viewnotes">View Notes</a></li>
                            </ul>
                        </li>
                        <li class="menu-title">
                            <span>Pages</span>
                        </li>

                        <li>
                            <a href="blank-page.html"><i class="fas fa-file"></i> <span> Blank Pages</span></a>
                        </li>
                    </ul>
                    </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="page-wrapper">
        <div class="content container-fluid">
            <div class="card" style="float:left;margin-left: 0px;width:100%">
                <div class="card-body">
                    <div style="display: flex; justify-content: space-between;">
                        <h2>View Uploaded Notes</h2>
                        <a class="btn btn-info btn1" id="resetfiles" onclick="resetFiles()">Reset</a>
                    </div>
                    <hr class="hr">
                    {{#each semesterData}}
                    <div class="card">
                        <div class="card-body">
                            {{this.semester}}:
                            <br><br>
                            {{#each this.files}}
                            {{inc @index}})
                            <label class="form-label">{{this}}&nbsp;&nbsp; --></label>&nbsp;&nbsp;
                            <a href="/download/{{../../email}}/{{../semester}}/{{this}}"
                                class="btn btn-primary btn1">Download</a>&nbsp;&nbsp;&nbsp;&nbsp;--></label>
                            <button onclick="openPdf('{{../../email}}', '{{../semester}}', '{{this}}')"
                                class="btn btn-primary btn1">Preview</button>
                            <a href="/delete/{{../../email}}/{{../semester}}/{{this}}" class="btn btn-danger btn1"
                                onclick="return confirm('Do really want to Delete the File?');">Delete</a>
                            <br><br>
                            {{/each}}
                        </div>
                    </div>
                    {{/each}}
                    <script>
                        function openPdf(email, semester, filename) {
                            window.open(`/View/${email}/${semester}/${filename}`, '_blank');
                        }
                    </script>
                </div>
            </div>
        </div>
    </div>






    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/resetnotes.js"></script>

    <script src="assets/js/jquery-3.6.0.min.js"></script>

    <script src="assets/js/popper.min.js"></script>
    <script src="assets/plugins/bootstrap/js/bootstrap.min.js"></script>

    <script src="assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <script src="assets/plugins/apexchart/apexcharts.min.js"></script>
    <script src="assets/plugins/apexchart/chart-data.js"></script>

    <script src="assets/plugins/simple-calendar/jquery.simple-calendar.js"></script>
    <script src="assets/js/calander.js"></script>

    <script src="assets/js/circle-progress.min.js"></script>

    <script src="assets/js/script.js"></script>
</body>

</html>