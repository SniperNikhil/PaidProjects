<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Teacher- Dashboard</title>

    <link rel="shortcut icon" href="images/officiallogo.jpg">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,700;1,400&amp;display=swap">

    <link rel="stylesheet" href="assets/plugins/bootstrap/css/bootstrap.min.css">

    <link rel="stylesheet" href="assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="assets/plugins/fontawesome/css/all.min.css">

    <link rel="stylesheet" href="assets/plugins/simple-calendar/simple-calendar.css">

    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <link rel="stylesheet" href="styles/index.css">
    <style>
        .logo1 {
            float: left;
            justify-items: left;
            margin-top: 14px;

        }

        .logo2 {
            margin-left: 15px;
        }

        .btn {
            margin-top: 10px;
        }
        .btn1 {
            font-size: 22px;
            margin-top: -5px;
            margin-left: 15px;
            width: 200px;
            height: 50px;
        }
        .flex {
            display: flex;
            justify-content: center;
        }

        #userList {
            align-items: center;
            justify-content: center;
            border: 1px solid black;
            background-color: rgb(255, 255, 255);
            border-radius: 12px;
        }

        #userList>* {
            margin-left: 10px;
            font-size: 20px;
        }

        label {
            margin-left: 10px;
        }

        #groupname {
            font-size: 20px;
        }

        .dropdown {
            position: relative;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            z-index: 999;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            padding: 12px 16px;
        }

        .dropdown-menu.show {
            display: block;
        }

        .dropdown-menu.show.right {
            left: auto;
            right: 0;
        }
    </style>
</head>

<body>

    <!--Common Header File -->
    <div id="headnavbar">
    </div>
    <script>
        $(document).ready(function () {
            $('#headnavbar').load("/common/staffheader.hbs");
        });
    </script>

    <div class="main-wrapper">
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li>
                            <div class="flex">
                                {{#if imge}}
                                <img src="backend/images/{{imge}}" class="img-fluid" alt="">
                                {{else}}
                                <img src="backend/images/7.jpg" class="img-fluid" alt="">
                                {{/if}}
                            </div>
                        </li>
                        <li class="menu-title">
                            <span>Main Menu</span>
                        </li>
                        <li class="submenu">
                            <a href="staff"><i class="bi bi-person-circle"></i> <span> Teacher Dashboard</span><span
                                    class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="staff">Back To Staff Page</a></li>
                            </ul>
                        </li>
                        <li class="">
                            <a href="staff-profile"><i class="fas fa-user-graduate"></i> <span> My Profile </span> <span
                                    class="menu-arrow"></span></a>
                        </li>

                        <li class="menu-title">
                            <span>Chat Application</span>
                        </li>
                        <li class="submenu active">
                            <a href="staff-chatapp"><i class="fas fa-holly-berry"></i> <span>Chat App</span></a>
                        </li>
                        <li class="menu-title">
                            <span>Notes</span>
                        </li>

                        <li class="submenu">
                            <a href="staff"><i class="fas fa-file"></i> <span> Notes</span><span
                                    class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="staff-addnotes">Add Notes</a></li>
                                <li><a href="staff-viewnotes">View Notes</a></li>
                            </ul>
                        </li>
                        <li class="menu-title">
                            <span>Pages</span>
                        </li>

                        <li>
                            <a href="blank-page.html"><i class="fas fa-file"></i> <span> Blank Pages</span></a>
                        </li>                     
                    </ul>
                    </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="page-wrapper">
        <div class="content container-fluid">
            <main>
                <header>
                    <div class="title">
                        <img src="icons/logo.svg" width="35px">
                        <h1>Chat App</h1>

                    </div>
                    <button type="button" onclick="show_hide()">
                        <img src="icons/robot.gif" width="50px">
                    </button>
                </header>
                <div class="container1">
                    <div class="users-window">
                        <div class="users-head">
                            <h3>Admin</h3>
                            <h4 class="users-count">{{countadmin}}</h4>
                        </div>
                        <div class="users-list" id="add_to_me">

                        </div>
                        <hr>
                        <div class="users-head">
                            <h3>Staff</h3>
                            <h4 class="users-count">{{countteacher}}</h4>
                        </div>
                        <div class="users-list users-list1" id="add_to_me1">

                        </div>
                        <hr>
                        <div class="users-head">
                            <h3>Student</h3>
                            <h4 class="users-count">{{countstudent}}</h4>
                        </div>
                        <div class="users-list users-list2" id="add_to_me2">

                        </div>
                        <hr>
                        <div class="users-head">
                            <h3>Group Chat</h3>
                        </div>
                        <button type="submit" class="btn btn-primary btn1" id="creategroup">Create Group</button>
                        <div class="users-list group-list" id="add_to_me3">

                        </div>
                    </div>

                    <div class="chat-window">
                        <header>
                            <div class="title">
                                {{!-- <img src="backend/images/7.jpg" width="35px"> --}}
                                <span class="user-img"><img class="rounded-circle" id="userImage"
                                        src="backend/images/7.jpg" width="50px" height="50px"></span>
                                <h1 id="clickedUser">UserName</h1>
                                <input type="hidden" id="myInput">

                            </div>

                            <div class="dropdown">
                                <div id="threedotbutton">

                                </div>
                                <div id="dropdown-menu" class="dropdown-menu" aria-labelledby="threedotbutton">
                                    <div class="user-header">
                                        <div class="user-text" style="display: flex;">
                                            <h6>Group Details</h6>
                                        </div>
                                    </div>
                                    <hr>

                                    <a class="dropdown-item text-primary" href="#" id="viewmembers">View Members</a><hr>
                                    <a class="dropdown-item text-primary" href="#" id="addmembers">Add Members</a><hr>
                                    <a class="dropdown-item text-primary" href="#" id="removemembers">Remove Members</a><hr>
                                    <a class="dropdown-item text-primary" href="#" id="deletegroup">Delete Group</a>
                                    <a class="dropdown-item text-primary" href="#" id="exitgroup">Exit Group</a>
                                </div>
                            </div>
                        </header>
                        <div class="chats">

                        </div>
                        <div class="user-input">
                            <input id="user-msg" type="text" placeholder="Type your message......">
                            <button type="button" id="user-send">SEND</button>
                        </div>
                    </div>
                </div>
            </main>
            <script>
                var uwindow = document.querySelector('.users-window');
                function show_hide() {
                    console.log(uwindow.style.display)
                    if (uwindow.style.display == "block") {
                        uwindow.style.display = "none";
                    }
                    else {
                        uwindow.style.display = "block";
                    }
                }
            </script>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/client.js"></script>

    <script src="assets/js/jquery-3.6.0.min.js"></script>

    <script src="assets/js/popper.min.js"></script>
    <script src="assets/plugins/bootstrap/js/bootstrap.min.js"></script>

    <script src="assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <script src="assets/plugins/apexchart/apexcharts.min.js"></script>
    <script src="assets/plugins/apexchart/chart-data.js"></script>

    <script src="assets/plugins/simple-calendar/jquery.simple-calendar.js"></script>
    <script src="assets/js/calander.js"></script>

    <script src="assets/js/circle-progress.min.js"></script>

    <script src="assets/js/script.js"></script>
</body>

</html>